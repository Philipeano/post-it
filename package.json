{
  "name": "post-it",
  "version": "1.0.0",
  "description": "PostIT is a simple app for small or large group conversations.",
  "engines": {
    "node": "8.1.4",
    "npm": "5.3.0"
  },
  "scripts": {
    "build-server": "babel server/src -d server/dist",
    "postinstall": "NODE_ENV=production && npm run build-server && webpack",
    "start": "node server/dist/app.js",
    "start:dev": "export NODE_ENV=development && npm run build-server && webpack && nodemon server/dist/app.js",
    "start:test": "export NODE_ENV=test && npm run build-server && npm run test",
    "test": "echo \"Running tests...\" && nyc mocha --recursive server/test --compilers js:babel-core/register"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Philipeano/post-it.git"
  },
  "keywords": [
    "post",
    "message",
    "group",
    "broadcast"
  ],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Philipeano/post-it/issues"
  },
  "homepage": "https://github.com/Philipeano/post-it#readme",
  "dependencies": {
    "babel-register": "^6.24.1",
    "bcrypt": "^1.0.2",
    "body-parser": "^1.17.2",
    "cookie-parser": "^1.4.3",
    "dotenv": "^4.0.0",
    "express": "^4.15.3",
    "express-session": "^1.15.4",
    "pg": "^6.4.1",
    "pg-hstore": "^2.3.2",
    "query-string": "^5.0.1",
    "sequelize": "^4.4.4",
    "webpack": "^3.1.0"
  },
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-core": "^6.25.0",
    "babel-loader": "^7.1.1",
    "babel-preset-env": "^1.6.0",
    "chai": "^4.1.2",
    "chai-http": "^3.0.0",
    "coveralls": "^3.0.0",
    "del": "^3.0.0",
    "eslint": "^3.19.0",
    "eslint-config-airbnb": "^15.0.2",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-jsx-a11y": "^5.1.1",
    "eslint-plugin-react": "^7.1.0",
    "mocha": "^4.0.0",
    "mocha-lcov-reporter": "^1.3.0",
    "morgan": "^1.8.2",
    "nodemon": "^1.11.0",
    "nyc": "^11.3.0",
    "sequelize-cli": "^2.8.0"
  }
}
